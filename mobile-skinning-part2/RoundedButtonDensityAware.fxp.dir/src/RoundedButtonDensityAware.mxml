<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
               xmlns:s="library://ns.adobe.com/flex/spark">
    <fx:Declarations>
        <!-- Place non-visual elements (e.g., services, value objects) here -->
    </fx:Declarations>
    <fx:Style>
        @namespace "library://ns.adobe.com/flex/spark";
        
        @media (application-dpi: 160)
        {
            Button
            {
                fontSize: 20;
            }
        }
        
        @media (application-dpi: 240)
        {
            Button
            {
                fontSize: 30;
            }
        }
        
        @media (application-dpi: 320)
        {
            Button
            {
                fontSize: 40;
            }
        }

    </fx:Style>
    <s:layout>
        <s:VerticalLayout/>
    </s:layout>
    <s:ActionBar width="100%" paddingLeft="6" paddingRight="6" chromeColor="0x006699">
        <s:actionContent>
            <s:Button label="Button" fontWeight="normal" skinClass="skins.TransparentRoundedButtonSkin"/>
        </s:actionContent>
    </s:ActionBar>
</s:Application>
